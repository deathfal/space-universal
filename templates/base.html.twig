{# templates/base.html.twig #}

<!DOCTYPE html>
<html lang="fr" class="h-full">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="flex flex-col min-h-screen">
        <header class="bg-gray-900 text-white">
            <nav class="container mx-auto px-4 py-3 flex items-center justify-between">
                <a href="{{ path('app_home') }}" class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-600 bg-clip-text text-transparent">
                    Cosmic-Bazaar   
                </a>
                <div class="flex items-center space-x-4">
                    <a href="{{ path('app_home') }}" class="hover:text-purple-400 transition-colors">Home</a>
                    <a href="{{ path('app_products') }}" class="hover:text-purple-400 transition-colors">Products</a>
                    <a href="#" class="hover:text-purple-400 transition-colors">Contact</a>
                    <a href="{{ path('login') }}" class="hover:text-purple-400 transition-colors">Login</a>
                    <a href="{{ path('register') }}" class="hover:text-purple-400 transition-colors">Register</a>
                </div>
            </nav>
        </header>

        <main class="flex-grow">
            {% block body %}{% endblock %}
        </main>

        <footer class="bg-gray-900 text-white py-8">
