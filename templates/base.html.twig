{# templates/base.html.twig #}

<!DOCTYPE html>
<html lang="fr" class="h-full">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</head>
<body class="flex flex-col min-h-screen">
    <!-- Navbar -->
    <header class="bg-gray-900 text-white fixed top-0 left-0 w-full z-20">
        <nav class="container mx-auto px-4 py-3 flex items-center justify-between">
            <a href="{{ path('app_home') }}" class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-600 bg-clip-text text-transparent">
                Cosmic-Bazaar
            </a>
            <div class="flex items-center space-x-4">
                <a href="{{ path('app_home') }}" class="hover:text-purple-400 transition-colors">Home</a>
                <a href="#" class="hover:text-purple-400 transition-colors">Products</a>
                <a href="#" class="hover:text-purple-400 transition-colors">Contact</a>
                {% if app.user %}
                    <span class="text-gray-300">Hey {{ app.user.username }}!</span>
                    <a href="{{ path('app_logout') }}" class="hover:text-purple-400 transition-colors">Logout</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="hover:text-purple-400 transition-colors">Login</a>
                    <a href="{{ path('app_register') }}" class="hover:text-purple-400 transition-colors">Register</a>
                {% endif %}
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-8">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-4">About Cosmic-Bazaar</h3>
                    <p class="text-sm">Your one-stop shop for all things intergalactic.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Customer Service</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-sm hover:text-purple-400 transition-colors">Contact Us</a></li>
                        <li><a href="#" class="text-sm hover:text-purple-400 transition-colors">Shipping Info</a></li>
                        <li><a href="#" class="text-sm hover:text-purple-400 transition-colors">Returns & Exchanges</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-sm hover:text-purple-400 transition-colors">FAQ</a></li>
                        <li><a href="#" class="text-sm hover:text-purple-400 transition-colors">Privacy Policy</a></li>
                        <li><a href="#" class="text-sm hover:text-purple-400 transition-colors">Terms of Service</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Connect With Us</h3>
                    <div class="flex space-x-4">
                        <a href="#" class="text-white hover:text-purple-400 transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M12 2.2C6.4 2.2 2 6.6 2 12.2 2 17.5 5.8 21.9 11 22.8v-7h-2v-3h2V9.7c0-2.2 1.4-3.4 3.3-3.4.7 0 1.3 0 1.9.1v2.2h-1.3c-1 0-1.2.5-1.2 1.1v1.9h2.5l-.3 3h-2.2v7c5.2-.9 9-5.3 9-10.8C22 6.6 17.6 2.2 12 2.2z"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-8 text-center">
            <p class="text-sm">&copy; 2024 Cosmic-Bazaar. All rights reserved across the universe.</p>
        </div>
    </footer>
</body>
</html>

