{% extends 'base.html.twig' %}

{% block title %}Order Confirmation - Cosmic Bazaar{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-b from-gray-900 to-black text-white">
    <div class="container mx-auto px-4 py-8 pt-20">
        <div class="max-w-2xl mx-auto text-center">
            <div class="bg-green-500 bg-opacity-20 rounded-full w-20 h-20 mx-auto mb-6 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
            </div>

            <h1 class="text-4xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">
                Thank You for Your Order!
            </h1>

            <p class="text-xl text-gray-300 mb-8">
                Your cosmic adventure begins now. We've received your order and it's being prepared for intergalactic shipping.
            </p>

            <div class="bg-gray-800 rounded-lg p-6 mb-8 text-left">
                <h2 class="text-2xl font-semibold mb-4 text-purple-300">Order Details</h2>
                <div class="border-t border-gray-700 pt-4">
                    <p class="text-gray-300 mb-2">
                        Order Number: <span class="text-white font-semibold">{{ 'CB-' ~ random(10000, 99999) }}</span>
                    </p>
                    <p class="text-gray-300">
                        Estimated Delivery: <span class="text-white font-semibold">{{ 'now'|date_modify('+3 days')|date('d M Y') }}</span>
                    </p>
                </div>
            </div>

            <div class="space-x-4">
                <a href="{{ path('app_products') }}" class="inline-block bg-gradient-to-r from-purple-600 to-pink-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-purple-700 hover:to-pink-700 transition duration-300">
                    Continue Shopping
                </a>
                <a href="#" class="inline-block text-purple-400 hover:text-purple-300 px-6 py-3">
                    Track Order
                </a>
            </div>

            <div class="mt-12 text-gray-400">
                <p>Need help? <a href="{{ path('contact') }}" class="text-purple-400 hover:text-purple-300">Contact our support team</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
