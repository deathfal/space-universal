{# templates/shopping/checkout.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Confirm Your Cosmic Order{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-b from-gray-900 to-black text-white">
    <div class="container mx-auto px-4 py-8 pt-20">
        <h1 class="text-4xl font-bold mb-8 text-center text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">
            Confirm Your Cosmic Order
        </h1>

        <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-gray-800 p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold mb-4 text-purple-300">Order Summary</h2>
                {% for item in cart %}
                    <div class="flex items-center mb-4">
                        <img src="{{ asset(item.image) }}" alt="{{ item.name }}" class="w-16 h-16 object-cover rounded-md mr-4">
                        <div>
                            <h3 class="text-lg font-semibold">{{ item.name }}</h3>
                            <p class="text-sm text-gray-400">Quantity: {{ item.quantity }}</p>
                            <p class="text-purple-400">{{ item.price * item.quantity }} â‚¬</p>
                        </div>
                    </div>
                {% endfor %}
                <div class="border-t border-gray-700 pt-4 mt-4">
                    <div class="flex justify-between mb-2">
                        <span>Subtotal</span>
                        <span>{{ subtotal }} UEC</span>
                    </div>
                    <div class="flex justify-between mb-2">
                        <span>Shipping</span>
                        <span>20.00 UEC</span>
                    </div>
                    <div class="flex justify-between mb-2">
                        <span>Tax</span>
                        <span>{{ tax }} UEC</span>
                    </div>
                    <div class="flex justify-between font-semibold text-lg text-purple-300">
                        <span>Total</span>
                        <span>{{ total }} UEC</span>
                    </div>
                </div>
            </div>

            <div class="bg-gray-800 p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold mb-4 text-purple-300">Shipping Information</h2>
                <form action="{{ path('confirm_order') }}" method="post" class="space-y-4">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-400 mb-2">Name</label>
                        <input type="text" id="name" name="name" value="{{ user.username }}" class="w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm py-2 px-3" required>
                    </div>
                    <div>
                        <label for="street" class="block text-sm font-medium text-gray-400 mb-2">Street</label>
                        <input type="text" id="street" name="street" value="{{ address.street }}" class="w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm py-2 px-3" required>
                    </div>
                    <div>
                        <label for="city" class="block text-sm font-medium text-gray-400 mb-2">City</label>
                        <input type="text" id="city" name="city" value="{{ address.city }}" class="w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm py-2 px-3" required>
                    </div>
                    <div>
                        <label for="postal_code" class="block text-sm font-medium text-gray-400 mb-2">Postal Code</label>
                        <input type="text" id="postal_code" name="postal_code" value="{{ address.postalCode }}" class="w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm py-2 px-3" required>
                    </div>
                    <div>
                        <label for="planet" class="block text-sm font-medium text-gray-400 mb-2">Planet</label>
                        <input type="text" id="planet" name="planet" value="{{ address.planet }}" class="w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm py-2 px-3" required>
                    </div>
                    <div>
                        <label for="galaxy" class="block text-sm font-medium text-gray-400 mb-2">Galaxy</label>
                        <input type="text" id="galaxy" name="galaxy" value="{{ address.galaxy }}" class="w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm py-2 px-3" required>
                    </div>
                    <div>
                        <label for="country" class="block text-sm font-medium text-gray-400 mb-2">Country</label>
                        <input type="text" id="country" name="country" value="{{ address.country }}" class="w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm py-2 px-3" required>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105">
                            Confirm Order
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}