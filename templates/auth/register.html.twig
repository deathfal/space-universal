{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen">
    {{ form_start(registrationForm, {'attr': {'class': 'bg-gray-800 p-8 rounded-lg shadow-md space-y-6 max-w-md w-full'}}) }}
        <h1 class="text-2xl font-bold text-white text-center">Register</h1>

        {{ form_row(registrationForm.username, {'label_attr': {'class': 'block text-gray-300'}, 'attr': {'class': 'w-full mt-2 p-3 rounded-md bg-gray-700 text-white'}}) }}
        {{ form_row(registrationForm.email, {'label_attr': {'class': 'block text-gray-300'}, 'attr': {'class': 'w-full mt-2 p-3 rounded-md bg-gray-700 text-white'}}) }}
        {{ form_row(registrationForm.plainPassword, {'label_attr': {'class': 'block text-gray-300'}, 'attr': {'class': 'w-full mt-2 p-3 rounded-md bg-gray-700 text-white'}}) }}
        {{ form_row(registrationForm.confirmPassword, {'label_attr': {'class': 'block text-gray-300'}, 'attr': {'class': 'w-full mt-2 p-3 rounded-md bg-gray-700 text-white'}}) }}

        <button type="submit" class="w-full py-3 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition">Register</button>

        <p class="text-center text-gray-400 mt-4">Already have an account? 
            <a href="{{ path('app_login') }}" class="text-purple-400 hover:text-purple-500">Login</a>
        </p>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
