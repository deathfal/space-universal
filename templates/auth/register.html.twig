{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen">
    <form method="POST" class="bg-gray-800 p-8 rounded-lg shadow-md space-y-6 max-w-md w-full">
        <h1 class="text-2xl font-bold text-white text-center">Register</h1>

        <div>
            <label for="username" class="block text-gray-300">Username</label>
            <input type="text" id="username" name="username" required class="w-full mt-2 p-3 rounded-md bg-gray-700 text-white">
        </div>

        <div>
            <label for="email" class="block text-gray-300">Email</label>
            <input type="email" id="email" name="email" required class="w-full mt-2 p-3 rounded-md bg-gray-700 text-white">
        </div>

        <div>
            <label for="password" class="block text-gray-300">Password</label>
            <input type="password" id="password" name="password" required class="w-full mt-2 p-3 rounded-md bg-gray-700 text-white">
        </div>

        <div>
            <label for="confirm_password" class="block text-gray-300">Confirm Password</label>
            <input type="password" id="confirm_password" name="confirm_password" required class="w-full mt-2 p-3 rounded-md bg-gray-700 text-white">
        </div>

        <button type="submit" class="w-full py-3 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition">Register</button>

        <p class="text-center text-gray-400 mt-4">Already have an account? 
            <a href="{{ path('login') }}" class="text-purple-400 hover:text-purple-500">Login</a>
        </p>
    </form>
</div>
{% endblock %}
