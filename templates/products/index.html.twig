{% extends 'base.html.twig' %}



{% block title %}Liste des Produits{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<style>
    :root {
        --background-dark: #0d1117;
        --card-background: #1a2332;
        --title-purple: #9333ea;
        --button-purple: #9333ea;
        --button-hover: #7928ca;
        --filter-button: #1e2738;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
    }

    .product-card {
        transition: all 0.3s ease-in-out;
    }

    .product-card:hover {
        transform: translateY(-0.5rem);
        box-shadow: 0 10px 15px -3px rgba(147, 51, 234, 0.3);
    }

    .price-slider {
        -webkit-appearance: none;
        width: 100%;
        height: 8px;
        border-radius: 5px;
        background: #4a5568;
        outline: none;
        opacity: 0.7;
        transition: opacity .2s;
    }

    .price-slider::-webkit-slider-thumb {
        -webkit-appearance: none;
        appearance: none;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: var(--button-purple);
        cursor: pointer;
    }

    .price-slider::-moz-range-thumb {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: var(--button-purple);
        cursor: pointer;
    }
</style>

<div class="min-h-screen bg-gradient-to-b from-gray-900 to-black text-white">
    <div class="container mx-auto px-4 py-8 pt-20">
        <h1 class="text-4xl font-bold mb-8 text-center text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">
            Liste des Produits
        </h1>

        <div class="flex flex-col md:flex-row gap-8">
            {# Section Filtres #}
            <div class="w-full md:w-1/4 bg-gray-800 p-6 rounded-lg">
                <h2 class="text-2xl font-semibold mb-4">Filtres</h2>
                <div class="mb-4">
                    <label class="block text-sm font-medium mb-2">Gamme de Prix</label>
                    <input type="range" id="price-filter" min="0" max="1000" value="500" class="price-slider mb-2">
                    <div class="flex justify-between text-sm">
                        <span>0 UEC</span>
                        <span>1000 UEC</span>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium mb-2">Catégorie</label>
                    {% for category in categories %}
                        <div class="flex items-center mb-2">
                            <input type="checkbox" id="{{ category.name|lower|replace({' ': '_'}) }}" data-category="{{ category.name }}" class="category-filter">
                            <label for="{{ category.name|lower|replace({' ': '_'}) }}" class="ml-2">{{ category.name }}</label>
                        </div>
                    {% endfor %}
                </div>
                <!-- Bouton d'application des filtres avec id "apply-filters" -->
                <button id="apply-filters" class="w-full py-2 bg-purple-600 hover:bg-purple-700 rounded-md transition duration-300">
                    Appliquer les Filtres
                </button>
            </div>

            {# Grille des Produits #}
            <div class="w-full md:w-3/4">
                <div class="product-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for product in products %}
                        <div class="product-card bg-gray-800 rounded-lg overflow-hidden shadow-lg" data-category="{{ product.category.name }}" data-price="{{ product.price }}">
                            <img src="{{ asset(product.imageUrl ?: 'img/products/default_product.png') }}" alt="{{ product.name }}" class="w-full h-48 object-cover">
                            <div class="p-4">
                                <h3 class="text-lg font-semibold mb-2 text-purple-300">{{ product.name }}</h3>
                                <p class="text-sm text-gray-400 mb-2">{{ product.category.name }}</p>
                                <div class="flex justify-between items-center">
                                    <span class="text-2xl text-purple-400 font-bold">{{ product.price }} UEC</span>
                                </div>
                                <a href="{{ path('app_product_detail', {'id': product.id}) }}" class="block w-full mt-4 py-2 bg-purple-600 hover:bg-purple-700 rounded-md text-center transition duration-300">
                                    Voir Détails
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <p>Aucun produit trouvé.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>


{% block javascripts %}
    <script>
        document.getElementById('apply-filters').addEventListener('click', () => {
            const selectedCategories = Array.from(document.querySelectorAll('.category-filter:checked'))
                .map(cb => cb.getAttribute('data-category').toLowerCase());
            console.log('Catégories sélectionnées:', selectedCategories);
            
            const maxPrice = parseFloat(document.getElementById('price-filter').value);

            document.querySelectorAll('.product-card').forEach(card => {
                const productCategory = card.getAttribute('data-category').toLowerCase();
                const productPrice = parseFloat(card.getAttribute('data-price'));
                console.log('Produit:', productCategory, productPrice);
                
                if ((selectedCategories.length === 0 || selectedCategories.includes(productCategory)) &&
                    productPrice <= maxPrice) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>
{% endblock %}


{% endblock %}

