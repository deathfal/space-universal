{% extends 'admin/base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto bg-gray-800 shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4 bg-gray-700 border-b border-gray-600">
        <h2 class="text-2xl font-bold text-white">Edit User #{{ user.id }}</h2>
    </div>
    <form method="post" action="{{ path('admin_user_edit', {id: user.id}) }}" enctype="multipart/form-data" class="px-6 py-4 space-y-6">
        <div>
            <label for="username" class="block text-sm font-medium text-gray-300 mb-2">Username</label>
            <input type="text" id="username" name="username" value="{{ user.username }}" class="w-full bg-gray-700 border border-gray-600 text-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm py-2 px-3">
        </div>
        <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
            <input type="email" id="email" name="email" value="{{ user.email }}" class="w-full bg-gray-700 border border-gray-600 text-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm py-2 px-3">
        </div>
        <div>
            <label for="avatar" class="block text-sm font-medium text-gray-300 mb-2">Avatar</label>
            <div class="flex items-center space-x-4">
                <img src="{{ asset(user.avatarUrl ?: 'img/avatars/default_avatar.png') }}" alt="Avatar" class="w-16 h-16 rounded-full object-cover">
                <div class="flex-1">
                    <input type="file" id="avatar" name="avatar" class="hidden" accept="image/*">
                    <label for="avatar" class="cursor-pointer bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded inline-block transition duration-150 ease-in-out">
                        Choose new avatar
                    </label>
                </div>
            </div>
            <div class="mt-2">
                <label class="inline-flex items-center">
                    <input type="checkbox" id="remove_avatar" name="remove_avatar" class="form-checkbox h-5 w-5 text-indigo-600 bg-gray-700 border-gray-600">
                    <span class="ml-2 text-sm text-gray-300">Remove current avatar</span>
                </label>
            </div>
        </div>
        <div>
            <label for="roles" class="block text-sm font-medium text-gray-300 mb-2">Roles</label>
            <div class="space-y-2">
                <label class="inline-flex items-center">
                    <input type="checkbox" name="roles[]" value="ROLE_USER" {% if 'ROLE_USER' in user.roles %}checked{% endif %} class="form-checkbox h-5 w-5 text-indigo-600 bg-gray-700 border-gray-600">
                    <span class="ml-2 text-sm text-gray-300">User</span>
                </label>
                <label class="inline-flex items-center">
                    <input type="checkbox" name="roles[]" value="ROLE_ADMIN" {% if 'ROLE_ADMIN' in user.roles %}checked{% endif %} class="form-checkbox h-5 w-5 text-indigo-600 bg-gray-700 border-gray-600">
                    <span class="ml-2 text-sm text-gray-300">Admin</span>
                </label>
            </div>
        </div>
        <div>
            <label for="is_verified" class="block text-sm font-medium text-gray-300 mb-2">Verified Status</label>
            <label class="inline-flex items-center">
                <input type="checkbox" id="is_verified" name="is_verified" value="1" {% if user.isVerified %}checked{% endif %} class="form-checkbox h-5 w-5 text-indigo-600 bg-gray-700 border-gray-600">
                <span class="ml-2 text-sm text-gray-300">User is verified</span>
            </label>
        </div>
        <div class="flex justify-end">
            <a href="{{ path('admin_users') }}" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mr-2 transition duration-150 ease-in-out">Cancel</a>
            <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded transition duration-150 ease-in-out">Save Changes</button>
        </div>
    </form>
</div>
{% endblock %}