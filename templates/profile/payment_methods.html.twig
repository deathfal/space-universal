{% extends 'base.html.twig' %}

{% block title %}Méthodes de Paiement Cosmiques - Cosmic Bazaar{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-900 bg-opacity-80 bg-cover bg-center bg-fixed" style="background-image: url('{{ asset('img/background/space-background.jpg') }}');">
    <div class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold text-white mb-8 text-center glow">Méthodes de Paiement Cosmiques</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
                <h2 class="text-2xl font-semibold text-white mb-4">Vos Méthodes de Paiement Cosmiques</h2>
                {% if paymentMethods is empty %}
                    <p class="text-indigo-300">Vous n'avez pas encore ajouté de méthode de paiement.</p>
                {% else %}
                    <div class="space-y-4">
                        {% for method in paymentMethods %}
                            <div class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-4 flex justify-between items-center backdrop-blur-sm">
                                <div>
                                    <p class="text-white font-semibold">{{ method.paymentType }} se terminant par {{ method.cardNumber|slice(-4) }}</p>
                                    <p class="text-indigo-300">Expire: {{ method.expiryDate }}</p>
                                </div>
                                <button class="text-red-400 hover:text-red-300 transition duration-300 ease-in-out">Supprimer</button>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div>
                <h2 class="text-2xl font-semibold text-white mb-4">Ajouter une Nouvelle Méthode de Paiement Cosmique</h2>
                <div class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-6 backdrop-blur-sm">
                    <form method="post" action="{{ path('app_profile_payment_methods') }}" class="space-y-6">
                        <div>
                            <label for="cardNumber" class="block text-sm font-medium text-indigo-300">Numéro de Carte</label>
                            <input type="text" id="cardNumber" name="cardNumber" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                        </div>

                        <div>
                            <label for="expiryDate" class="block text-sm font-medium text-indigo-300">Date d'Expiration</label>
                            <input type="text" id="expiryDate" name="expiryDate" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                        </div>

                        <div>
                            <label for="cardholderName" class="block text-sm font-medium text-indigo-300">Nom du Titulaire</label>
                            <input type="text" id="cardholderName" name="cardholderName" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                        </div>

                        <div>
                            <label for="paymentType" class="block text-sm font-medium text-indigo-300">Type de Paiement</label>
                            <input type="text" id="paymentType" name="paymentType" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                        </div>

                        <div>
                            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105 glow">
                                Ajouter la Méthode de Paiement Cosmique
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .glow {
        text-shadow: 0 0 10px rgba(167, 139, 250, 0.7);
    }
    .shadow-neon {
        box-shadow: 0 0 15px rgba(167, 139, 250, 0.5);
    }
</style>
{% endblock %}