{% extends 'base.html.twig' %}

{% block title %}Vos Commandes Cosmiques - Cosmic Bazaar{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-900 bg-opacity-80 bg-cover bg-center bg-fixed" style="background-image: url('{{ asset('img/background/obituary_background.png') }}');">
    <div class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold text-white mb-8 text-center glow">Vos Commandes Cosmiques</h1>

        {% if orders is empty %}
            <p class="text-indigo-300 text-center text-xl">Vous n'avez pas encore passé de commande dans cette galaxie.</p>
        {% else %}
            <div class="space-y-6">
                {% for order in orders %}
                    <div class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-6 backdrop-blur-sm">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-2xl font-semibold text-white">Commande #{{ order.id }}</h2>
                            <span class="text-indigo-300">{{ order.createdAt|date('d M Y') }}</span>
                        </div>
                        <div class="mb-4">
                            <p class="text-indigo-300">Statut: <span class="font-semibold text-white">{{ order.status }}</span></p>
                            <p class="text-indigo-300">Total: <span class="font-semibold text-white">{{ order.totalPrice|number_format(2) }} UEC</span></p>
                        </div>
                        <a href="#" class="text-indigo-400 hover:text-indigo-300 transition duration-300 ease-in-out">Voir les détails</a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .glow {
        text-shadow: 0 0 10px rgba(167, 139, 250, 0.7);
    }
    .shadow-neon {
        box-shadow: 0 0 15px rgba(167, 139, 250, 0.5);
    }
</style>
{% endblock %}