{% extends 'base.html.twig' %}

{% block title %}Vos Avis Cosmiques - Cosmic Bazaar{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-900 bg-opacity-80 bg-cover bg-center bg-fixed" style="background-image: url('{{ asset('img/background/obituary_background.png') }}');">
    <div class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold text-white mb-8 text-center glow">Vos Avis Cosmiques</h1>

        {% if reviews is empty %}
            <p class="text-indigo-300 text-center text-xl">Vous n'avez pas encore laiss√© d'avis dans cette galaxie.</p>
        {% else %}
            <div class="space-y-6">
                {% for review in reviews %}
                    <div class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-6 backdrop-blur-sm">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h2 class="text-2xl font-semibold text-white">{{ review.product.name }}</h2>
                                <p class="text-indigo-300">{{ review.createdAt|date('d M Y') }}</p>
                            </div>
                            <div class="flex">
                                {% for i in 1..5 %}
                                    <svg class="w-6 h-6 {% if i <= review.rating %}text-yellow-400{% else %}text-gray-600{% endif %}" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                {% endfor %}
                            </div>
                        </div>
                        <p class="text-indigo-300">{{ review.comment }}</p>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .glow {
        text-shadow: 0 0 10px rgba(167, 139, 250, 0.7);
    }
    .shadow-neon {
        box-shadow: 0 0 15px rgba(167, 139, 250, 0.5);
    }
</style>
{% endblock %}