{% extends 'base.html.twig' %}

{% block title %}Adresses Cosmiques - Cosmic Bazaar{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-900 bg-opacity-80 bg-cover bg-center bg-fixed" style="background-image: url('{{ asset('img/background/obituary_background.png') }}');">
    <div class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold text-white mb-8 text-center glow">Adresses Cosmiques</h1>

        <div class="max-w-2xl mx-auto">
            <div class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-8 backdrop-blur-sm">
                <form method="post" action="{{ path('app_profile_address') }}" class="space-y-6">
                    <div>
                        <label for="street" class="block text-sm font-medium text-indigo-300">Rue</label>
                        <input type="text" id="street" name="street" value="{{ address ? address.street : '' }}" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                    </div>

                    <div>
                        <label for="city" class="block text-sm font-medium text-indigo-300">Ville</label>
                        <input type="text" id="city" name="city" value="{{ address ? address.city : '' }}" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                    </div>

                    <div>
                        <label for="postalCode" class="block text-sm font-medium text-indigo-300">Code Postal</label>
                        <input type="text" id="postalCode" name="postalCode" value="{{ address ? address.postalCode : '' }}" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                    </div>

                    <div>
                        <label for="planet" class="block text-sm font-medium text-indigo-300">Plan√®te</label>
                        <input type="text" id="planet" name="planet" value="{{ address ? address.planet : '' }}" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                    </div>

                    <div>
                        <label for="galaxy" class="block text-sm font-medium text-indigo-300">Galaxie</label>
                        <input type="text" id="galaxy" name="galaxy" value="{{ address ? address.galaxy : '' }}" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                    </div>

                    <div>
                        <label for="country" class="block text-sm font-medium text-indigo-300">Pays</label>
                        <input type="text" id="country" name="country" value="{{ address ? address.country : '' }}" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                    </div>

                    <div class="flex items-center justify-between">
                        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105 glow">
                            Sauvegarder l'Adresse
                        </button>
                        <a href="{{ path('app_profile') }}" class="text-indigo-400 hover:text-indigo-300 transition duration-300 ease-in-out">
                            Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .glow {
        text-shadow: 0 0 10px rgba(167, 139, 250, 0.7);
    }
    .shadow-neon {
        box-shadow: 0 0 15px rgba(167, 139, 250, 0.5);
    }
</style>
{% endblock %}