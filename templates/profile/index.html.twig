{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Cosmique - Cosmic Bazaar{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-900 bg-opacity-80 bg-cover bg-center bg-fixed" style="background-image: url('{{ asset('img/background/obituary_background.png') }}');">
    <div class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold text-white mb-8 text-center glow">Tableau de Bord Cosmique</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="col-span-1">
                <div class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-6 backdrop-blur-sm">
                    <div class="flex items-center justify-center mb-4">
                        <img src="{{ user.avatarUrl ?: asset('img/avatars/default_avatar.png') }}" alt="{{ user.username }}" class="w-32 h-32 rounded-full border-4 border-indigo-500 glow">
                    </div>
                    <h2 class="text-2xl font-semibold text-white text-center mb-2">{{ user.username }}</h2>
                    <p class="text-indigo-300 text-center mb-4">{{ user.email }}</p>
                    <div class="flex justify-center">
                        <a href="{{ path('app_profile_edit') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105 glow">
                            Modifier le Profil
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-span-2">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <a href="{{ path('app_profile_address') }}" class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-6 hover:bg-opacity-90 transition duration-300 ease-in-out transform hover:scale-105 backdrop-blur-sm">
                        <div class="flex items-center justify-center mb-4">
                            <svg class="w-12 h-12 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-2 text-center">Adresses Cosmiques</h3>
                        <p class="text-indigo-300 text-center">Gérez vos coordonnées intergalactiques</p>
                    </a>
                    <a href="{{ path('app_profile_orders') }}" class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-6 hover:bg-opacity-90 transition duration-300 ease-in-out transform hover:scale-105 backdrop-blur-sm">
                        <div class="flex items-center justify-center mb-4">
                            <svg class="w-12 h-12 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-2 text-center">Commandes</h3>
                        <p class="text-indigo-300 text-center">Consultez votre historique de commandes cosmiques</p>
                    </a>
                    <a href="{{ path('app_profile_payment_methods') }}" class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-6 hover:bg-opacity-90 transition duration-300 ease-in-out transform hover:scale-105 backdrop-blur-sm">
                        <div class="flex items-center justify-center mb-4">
                            <svg class="w-12 h-12 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path></svg>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-2 text-center">Méthodes de Paiement</h3>
                        <p class="text-indigo-300 text-center">Gérez vos options de paiement universelles</p>
                    </a>
                    <a href="{{ path('app_profile_reviews') }}" class="bg-gray-800 bg-opacity-70 rounded-lg shadow-neon p-6 hover:bg-opacity-90 transition duration-300 ease-in-out transform hover:scale-105 backdrop-blur-sm">
                        <div class="flex items-center justify-center mb-4">
                            <svg class="w-12 h-12 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path></svg>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-2 text-center">Avis</h3>
                        <p class="text-indigo-300 text-center">Consultez vos avis sur les produits interstellaires</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .glow {
        text-shadow: 0 0 10px rgba(167, 139, 250, 0.7);
    }
    .shadow-neon {
        box-shadow: 0 0 15px rgba(167, 139, 250, 0.5);
    }
</style>
{% endblock %}

{% block navigation %}
    <nav class="bg-gray-800 p-6">
        <ul>
            <li>
                <a href="{{ path('app_profile_address') }}" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                    <i class="fas fa-map-marker-alt mr-3 text-gray-400 group-hover:text-gray-500"></i>
                    Adresses Cosmiques
                </a>
            </li>
            <li>
                <a href="{{ path('app_profile_orders') }}" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                    <i class="fas fa-shopping-cart mr-3 text-gray-400 group-hover:text-gray-500"></i>
                    Commandes
                </a>
            </li>
            <li>
                <a href="{{ path('app_profile_payment_methods') }}" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                    <i class="fas fa-credit-card mr-3 text-gray-400 group-hover:text-gray-500"></i>
                    Payment Methods
                </a>
            </li>
            <li>
                <a href="{{ path('app_wallet_index') }}" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                    <i class="fas fa-wallet mr-3 text-gray-400 group-hover:text-gray-500"></i>
                    My Wallets
                </a>
            </li>
            <li>
                <a href="{{ path('app_profile_reviews') }}" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                    <i class="fas fa-star mr-3 text-gray-400 group-hover:text-gray-500"></i>
                    Avis
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}